{
  "name": "@sapling/sapling",
  "version": "0.1.4",
  "license": "MPL-2.0",
  "description": "Node.js framework for faster-than-light web development.",
  "type": "module",
  "keywords": [
    "framework",
    "server",
    "express",
    "fast",
    "prototyping",
    "development"
  ],
  "homepage": "https://www.saplingjs.com",
  "bugs": "https://github.com/saplingjs/sapling/issues",
  "author": {
    "name": "Oskari Groenroos",
    "email": "oskari@groenroos.fi",
    "url": "https://www.groenroos.fi"
  },
  "contributors": [
    {
      "name": "Louis Stowasser"
    }
  ],
  "bin": "./index.js",
  "dependencies": {
    "async": "^3.2.0",
    "body-parser": "1.19.0",
    "chalk": "^4.1.0",
    "compression": "^1.7.4",
    "cookie-parser": "1.4.5",
    "cron": "^1.7.1",
    "csurf": "^1.11.0",
    "express": "4.17.1",
    "express-fileupload": "^1.2.1",
    "express-session": "1.17.1",
    "filenamify": "^4.2.0",
    "front-matter": "^4.0.2",
    "image-size": "^1.0.0",
    "isobject": "^4.0.0",
    "moment": "2.29.1",
    "morgan": "^1.9.1",
    "nodemailer": "6.6.0",
    "path-match": "^1.2.4",
    "underscore": "1.13.1",
    "unused-filename": "^2.1.0",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/eslint-parser": "^7.13.4",
    "@sapling/sapling": "file:.",
    "ava": "^3.15.0",
    "eslint": "^7.22.0",
    "husky": "4.3.8",
    "lint-staged": ">=10",
    "maildev": "^1.1.0",
    "mime-types": "^2.1.29",
    "nyc": "^15.1.0",
    "supertest": "^6.1.3",
    "webpack": "^5.28.0",
    "xo": "^0.39.1"
  },
  "resolutions": {
    "maildev/socket.io": "^2.4.0"
  },
  "scripts": {
    "precommit": "lint-staged",
    "lint-fix": "xo --fix",
    "lint": "xo",
    "test": "nyc ava",
    "test:report": "nyc --reporter=lcov npm test",
    "test:send": "npx codecov"
  },
  "xo": {
    "ignores": [
      "drivers/db/Interface.js",
      "drivers/render/Interface.js",
      "node_modules/**/*.*",
      "test/**/*.*"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "requireConfigFile": false
    },
    "rules": {
      "max-params": [
        "warn",
        {
          "max": 6
        }
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 2
        }
      ],
      "no-await-in-loop": "off",
      "no-new": "off",
      "no-return-await": "off",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "unicorn/filename-case": [
        "error",
        {
          "cases": {
            "camelCase": true,
            "pascalCase": true
          }
        }
      ]
    }
  },
  "ava": {
    "files": [
      "test/**/*",
      "!test/_utils",
      "!test/_data"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "!(*test).js": [
      "npm run lint"
    ]
  }
}
