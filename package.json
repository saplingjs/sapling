{
  "name": "@sapling/sapling",
  "version": "0.1.0",
  "license": "MPL-2.0",
  "description": "Node.js framework for faster-than-light web development.",
  "keywords": [
    "framework",
    "server",
    "express",
    "fast",
    "prototyping",
    "development"
  ],
  "homepage": "https://www.saplingjs.com",
  "bugs": "https://github.com/saplingjs/sapling/issues",
  "author": {
    "name": "Oskari Groenroos",
    "email": "oskari@groenroos.fi",
    "url": "https://www.groenroos.fi"
  },
  "contributors": [
    {
      "name": "Louis Stowasser"
    }
  ],
  "dependencies": {
    "async": "^3.2.0",
    "body-parser": "1.19.0",
    "chalk": "^4.1.0",
    "cookie-parser": "1.4.5",
    "cron": "^1.7.1",
    "express": "4.17.1",
    "express-fileupload": "^1.2.1",
    "express-session": "1.17.1",
    "filenamify": "^4.2.0",
    "front-matter": "^4.0.2",
    "image-size": "^0.9.3",
    "isobject": "^4.0.0",
    "moment": "2.29.1",
    "morgan": "^1.9.1",
    "nodemailer": "6.4.18",
    "path-match": "^1.2.4",
    "request": "2.88.2",
    "underscore": "1.12.0",
    "unused-filename": "^2.1.0",
    "yargs": "^16.2.0"
  },
  "scripts": {
    "test-fix": "xo --fix",
    "test": "xo"
  },
  "devDependencies": {
    "@babel/core": "^7.12.17",
    "@babel/eslint-parser": "^7.12.16",
    "xo": "^0.37.1"
  },
  "xo": {
    "ignores": [
      "drivers/db/Interface.js",
      "drivers/render/Interface.js"
    ],
    "parser": "babel-eslint",
    "rules": {
      "max-params": [
        "warn",
        {
          "max": 6
        }
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 2
        }
      ],
      "no-await-in-loop": "off",
      "no-new": "off",
      "no-return-await": "off",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "unicorn/filename-case": [
        "error",
        {
          "cases": {
            "camelCase": true,
            "pascalCase": true
          }
        }
      ]
    }
  }
}
